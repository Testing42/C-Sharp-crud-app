@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

@*PArtial view is in sharefolder the partial view is setup so you can take a part of code and make it easily reusable 
    Because all you would have to do is add the partial name to the view.
    <partial name="_Notification"/>
    To make this happen on any 1 page you put the partial name right above container below but to not have to put it on every page it will be going to
    the layout.cshtml
.*@

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="create" class="btn btn-primary">
                <i class="bi bi-patch-plus"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
    <br /> <br /> <br />

    

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Category name
                </th>
                <th>
                    Display Order
                </th>
                <th>
                    Date
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Name
                    </td>
                    <td width="20%">
                        @obj.DisplayOrder
                    </td>
                    <td width="30%">
                        @obj.CreatedDateTime
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"> <i class="bi bi-trash"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
